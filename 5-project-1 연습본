#include <stdio.h>

int main(void) {
    int number, digits;

    printf("Enter a number :   ");
        scanf_s(" %d", &number);

        if (0 <= number && number <= 9) {
            printf("%d", 1);
        }
        else if (10 <= number && number <= 99) {
            printf(" %d", 2);
        }
        else{
            printf("%d", 3);
        }
        printf("The number %d has %d digits", number, digits);

    return 0;
}
