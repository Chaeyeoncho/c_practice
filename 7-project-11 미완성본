#include <stdio.h>

int main() {
    char first[20], last[20];

    printf("Enter a first and last name: ");
    scanf_s("%s", first); // 첫 번째 문자열 입력
    scanf_s("%s", last);  // 두 번째 문자열 입력

    printf("%s, %c.\n", last, first[0]);

    return 0;
}
// 배열 형식으로 풀었는데 gpt가 이거 맞다고 하는데 .. scanf특성상 공백을 인식을 못해서 .. 일단 skip 하고 함수 부분 공부하고 다시 ㄱㄱ
