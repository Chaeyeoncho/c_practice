#include <stdio.h>

int main() {
    int n, i;
    printf("Enter number of days in month :   ");
    scanf_s("%d", &n);
    printf("Enter starting day of the week(1 = Sun, 7 = Sat) :  ");
    scanf_s("%d", &i);

   // 달력의 첫부분을 1로 가정하고 1~7일때 7로 나누어서 0이 되면 다음줄로 넘어가게 표현해야됨 
   // 그리고 그것을 n까지 반복하게 설정해야함
    
    while (n = i); 
    {
        for (day = 1; day % 7 = 0; day++) {
            printf("/n");
        }
    }

    printf("%d", day);

    return 0;
}
